generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model ProfileImage {
  id        String   @id @default(cuid())
  imageUrl  String // Vercel Blob URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bio {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Experience {
  id          String   @id @default(cuid())
  title       String
  company     String
  location    String
  startDate   String
  endDate     String   @default("")
  current     Boolean  @default(false)
  description String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Achievement {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  date        String
  imageUrl    String   @default("") // Vercel Blob URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Certification {
  id            String   @id @default(cuid())
  title         String
  issuer        String
  date          String
  credentialUrl String
  imageUrl      String   @default("") // Vercel Blob URL
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Resume {
  id           String   @id @default(cuid())
  fileName     String
  fileUrl      String // Vercel Blob URL
  uploadedDate DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
